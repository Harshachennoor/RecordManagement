@model Record

@{
    ViewBag.Title = "Add the Record";
}

<form asp-action="Alter" method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group m-1">
        <label asp-for="ProductName">Product name: </label>
        <span asp-validation-for="ProductName" class="text-danger"></span>
        <input asp-for="ProductName" class="form-control" />
    </div>
    <div class="form-group m-1">
        <label asp-for="Code">Product Code: </label>
        <span asp-validation-for="Code" class="text-danger"></span>
        <input asp-for="Code" class="form-control" />
    </div>

    <div class="form-group m-1">
        <label asp-for="CategoryId">Category: </label>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
        <select asp-for="CategoryId" class="form-control"
            asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "Name"))">
            <option value="">select a category</option>
        </select>

    </div>

    <div class="form-group m-1">
        <label asp-for="Description">Enter Description: </label>
        <span asp-validation-for="Description" class="text-danger"></span>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="form-group m-1">
        <label asp-for="Price">Price: </label>
        <span asp-validation-for="Price" class="text-danger"></span>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-group m-1">
        <label asp-for="WarehouseId">Warehouse: </label>
        <span asp-validation-for="WarehouseId" class="text-danger"></span>
        <select asp-for="WarehouseId" class="form-control"
            asp-items="@(new SelectList(ViewBag.Warehouses,"WarehouseId", "Name"))">
                <option value="" class="select-style">select the warehouse</option>
        </select>
    </div>

    <div class="form-group m-1">
        <label asp-for="Vendor">Vendor details: </label>
        <span asp-validation-for="Vendor" class="text-danger"></span>
        <input asp-for="Vendor" class="form-control" />
    </div>
    <div class="form-group m-1 mb-2">
        <label asp-for="Quantity">Quantity: </label>
        <span asp-validation-for="Quantity" class="text-danger"></span>
        <input asp-for="Quantity" class="form-control" />
    </div>
    
    <input type="hidden" asp-for="RecordId" />
    <div class="form-group mb-4 mt-2">
        <button type="submit" class="btn btn-success">@ViewBag.Action</button>
        <a asp-action="Cancel" asp-controller="Record" class="btn btn-danger">Cancel</a>
        <a asp-action="Alter" asp-controller="Record" class="btn btn-secondary-outline">Clear</a>
    </div>

</form>